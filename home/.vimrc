syntax on
filetype plugin on

set nocompatible
set viminfo+=!
set autoindent
set smartindent
set expandtab
set smarttab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set showmatch
set incsearch
set hlsearch
set ignorecase
set smartcase
set wrapscan
set hidden
set autoread
set wildmenu
set ruler
set wrap
set backspace=indent,eol,start
set nobackup
set t_Co=256
set mouse=a
set ttymouse=xterm2
set list
set cursorline

let mapleader = ","
nnoremap <Leader><Leader> :up<CR>
noremap j gj
noremap k gk
noremap gj j
noremap gk k

set fileencoding=utf-8
